<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Chessboard</title>
</head>
	<body>
		<script type="text/javascript">
//CHESSBOARD

let simbolo="#";
let espacio="_";
let camino=1;
let countInt=0;
let countExt=0;
let width=Number(prompt("Dame un numero para el ancho del tablero"));
let height=Number(prompt("Dame un numero para el alto del tablero"));

while(countExt<height){
	
		while (countInt<width){
			if (camino==1){
				document.write(espacio);
			}
			else{
				document.write(simbolo);
			}
			camino=camino*(-1);
			countInt++;
		}
	
	camino=camino*(-1);
	countInt=0;
	document.write("</br>");
	countExt++;
}

			</script>
	</body>
</html>
